<div class="js-modal-trigger" data-target="listingModal">
    <div id="listing" class="tile is-child notification">
        <p class="title">{{title}}</p>
        <p class="subtitle">{{format_date listing_date}}</p>
        <p class="subtitle">{{description}}</p>
        <p class="lister subtitle is-size-5">Listed by: {{user.username}}</p>
        <p class="subtitle">{{user.email}}</p>
        <p class="subtitle">{{category.category_name}}</p>
        <div>
            <button id="edit" class="button is-white">Edit</button>
        </div>
    </div>
</div>

{{!-- EDIT LISTING MODAL --}}

<div class="editListingModal modal is-clipped">
    <div class="modalBgEdit modal-background"></div>
    <div class="modal-content has-background-light py-5 px-5">
        <div class="tile is-ancestor flex">
            <div class="tile is-parent justify-content-center">
                <div class="tile is-10 is-child notification">
                    <form class="new-listing-form">
                        <div class="tile is-12 justify-content-between">
                            <h2 class="title pb-5">Edit Listing</h2>
                        </div>
                        <div class="tile is-vertical">
                        <h3 class="subtitle">Title</h3>
                        <input name="listing-title" class="mb-5" value="{{title}}"></input>
                        <h3 class="subtitle pt-5">Description</h3>
                        <textarea name="description" class="textarea mb-5   is-warning" >{{description}}</textarea>
                        <label for="categories"><h3 class="subtitle mt-5 mr-5">Category:</h3></label>
                        
                        <select class="mt-3" name="categories" id="categories">
                            <option value="misc">Other</option>
                            <option value="sports">Sports</option>
                            <option value="art">Art</option>
                            <option value="crafting">Crafting</option>
                            <option value="music">Music</option>
                            <option value="woodworking">Woodworking</option>
                            <option value="books">Books</option>
                            <option value="outdoor">Outdoor</option>
                            <option value="tech">Tech</option>
                        </select>
                        {{!-- <h3 class="subtitle mt-5">Keywords</h3>
                        <input class="mb-5" placeholder="Tags"></input> --}}
                        <div class="tile pt-5 is-6">
                            <button id="edit-list" class="button" type="submit">Submit</button>
                            <button id="delete" class="button is-black" type="submit">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="js/edit-listing.js"></script>