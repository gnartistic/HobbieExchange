<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>hobbyXchange</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar color1 is-fullwidth">
        <div class="tile justify-content-between pl-5 pr-5">
            <ul class="tile level is-family-monospace">
                {{#if loggedIn}}
                <li>
                    <button id="logout" class="button is-black pb-3">
                        <h3 class="has-text-weight-bold topNav">Logout</h3>
                    </button> 
                    </li>

                    <div>
                        <button id="hammer" class="button is-black">
                            <h3 class="has-text-weight-bold"> <a href="/hammer">Randomize!</a></h3>
                        </button>
                    </div>
                    
                {{else}}
                <li>
                    <!--LOGIN MODAL -->
                
                    <div class="js-modal-trigger" data-target="loginModal">
                        <button id="login" class="button is-black">
                            <h3 class="has-text-weight-bold topNav">Login</h3>
                        </button>
                    </div>
                </li>
            </ul>
                <ul>
                    <li>
                        <!--SIGNUP MODAL-->
                
                        <div class="js-modal-trigger" data-target="signUpModal">
                            <button id="signUp" class="button is-medium">
                                <h3 class="has-text-weight-bold">Sign up!</h3>
                            </button>
                        </div>
                    </li>
                </ul>
                {{/if}}
        </div>
    </nav>
    <section class="hero is-light is-small">
        <div class="hero-head">
            <nav class="navbar">
                <div class="tile justify-content-center">
                    <a class="" href="#">
                        <img src="/images/My project-1 (1).png">
                    </a>
                </div>
            </nav>
        </div>
        <div class="hero-foot">
            <nav class="tabs is-boxed is-fullwidth">
                <div class="container">
                    <ul class="is-family-monospace">
                        <li class="tab is-active">
                            <a href="#">Home</a>
                        </li>
                        <li>
                            <a href="/categories">Categories</a>
                        </li>
                        {{#if loggedIn}}
                        <li>
                            <a href="/view-listings">Your Listings</a>
                        </li>
                        <li>
                            <a href="/create-listing">Create Listing</a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </nav>
        </div>
    </section>

    <!--LISTINGS DISPLAYED-->
    <main>
        {{{body}}}
    </main>

    <!-- MODAL CONTENTS -->

    <!--signup-->
    <div class="signUpModal modal is-clipped">
        <div class="modal-background"></div>
        <div class="modal-content has-background-light py-5 px-5">
            <div class="tile">
                <form id="signup-form" class="signup-form">
                        <label for="" class="label">
                            Name
                        </label>
                            <input id="name-signup" placeholder="John Parker">
                        <label class="label">Username</label>
                            <input id="username-signup" placeholder="coolUsername">
                        <label class="label">Email</label>
                            <input id="email-signup" placeholder="email@example.com">
                        <label class="label">Password</label>
                            <input id="password-signup" type="password" autocomplete="new-password">
                        <label class="label">Wish List</label>
                            <input id="wish-list-signup" id="" cols="30" rows="2"
                                placeholder=" Skateboard, Books, Paint">
                        <button class="button" id="formSubmit" type="submit">Submit</button>
                </form>
                <div class="mt-5 pt-5">
                    <img src="/images/banner2.png">
                    <!-- <img src="/assets/images/My project-1 (1).png"> -->
                </div>
            </div>
        </div>
    </div>

    <!--login modal-->
    <div class="loginModal modal is-clipped">
        <div class="modalBgLogin modal-background"></div>
        <div class="modal-content has-background-light py-5 px-5">
            <form class="tile justify-content-center login-form">
                <div class="tile is-5 level is-vertical m-5">
                    <label for="email-login">Email:</label>
                    <input class="form-input" type="text" id="email-login" autocomplete="email"/>
                    <label for="password-login">Password:</label>
                    <input class="form-input" type="password" id="password-login" autocomplete="current-password"/> 

                    <button class="button m-5" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/logout.js"></script>
    <script src="/js/login.js"></script>
    <script src="/js/new-user.js"></script>
    <script src="https://kit.fontawesome.com/2a0f064e00.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
</body>

</html>